<div class="rank">
        <h3 class="rank-tit">Bảng xếp hạng</h3>
    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th class="tittleTab" scope="col">Top</th>
                <th class="tittleTab" scope="col">Công ty</th>
                <th class="tittleTab" scope="col">Lĩnh vực</th>
                <th class="tittleTab" scope="col">Loại hình</th>
                <th class="tittleTab" style="text-align: center;" scope="col">Lượt đánh giá</th>
                <th class="tittleTab" scope="col"></th>
            </tr>
        </thead>
        <tbody >
            {{#each companyes}}
            <tr>
                <th scope="row">{{sum @index 1}}</th>
                <td class="groupname-rank">
                    <img class="logo-rank" src="/img-video/{{this.logo}}" alt="">
                    <div class="heading-rank">
                        <h3>{{this.name}}</h3>
                    </div>
                </td>
                <td>{{this.field}}</td>
                <td>{{this.typeCompany}}</td>
                <td style="text-align: center;">{{this.likeCount}}</td>
                <td>
                    <a href="/detail/{{this.slug}}" class="viewDt">Xem chi tiết</a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>