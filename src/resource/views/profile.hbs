<hr>

<form method="POST" action="/profile/update/{{slug}}?_method=PUT" enctype="multipart/form-data">
    <div class="container bootstrap snippet">
        <h2>Hồ sơ cá nhân của bạn</h2>
        <div class="row">
            <div class="col-sm-3">
                <!--left col-->


                <div class="text-center">
                    {{#if avatar}}
                    <img src="/img-video/{{avatar}}" class="avatar img-circle img-thumbnail" alt="avatar">
                    {{else}}
                    <img class="avarta"
                        src="https://scontent.fdad2-1.fna.fbcdn.net/v/t1.30497-1/143086968_2856368904622192_1959732218791162458_n.png?_nc_cat=1&ccb=1-7&_nc_sid=7206a8&_nc_ohc=VEahJ2Ps3kMAX8uqwfO&_nc_ht=scontent.fdad2-1.fna&oh=00_AT-rHxUn0aY1ejPx5MbSrV2mGBtZso_3tCyoHwhcwQByjg&oe=62EE1078"
                        alt="avarta">
                    {{/if}}

                    <h6>Upload a different photo...</h6>
                    <input type="file" name="avatar" class="text-center center-block file-upload">
                    <h3>{{userName}}</h3>
                </div>
                </hr><br>


                <div class="panel panel-default">
                    <div class="panel-heading">Website <i class="fa fa-link fa-1x"></i></div>
                    <div class="panel-body"><a href="http://bootnipets.com">bootnipets.com</a></div>
                </div>


                <ul class="list-group">
                    <li class="list-group-item text-muted">Activity <i class="fa fa-dashboard fa-1x"></i></li>
                    <li class="list-group-item text-right"><span class="pull-left"><strong>Likes</strong></span> {{countLike}}</li>
                    <li class="list-group-item text-right"><span class="pull-left"><strong>Posts</strong></span> {{countPost}}</li>
                </ul>

                <div class="panel panel-default">
                    <div class="panel-heading">Social Media</div>
                    <div class="panel-body">
                        <i class="fa-brands fa-facebook"></i>
                        <i class="fa-brands fa-github"></i>
                        <i class="fa-brands fa-gitlab"></i>
                        <i class="fa-brands fa-instagram"></i>
                    </div>
                </div>

            </div>
            <!--/col-3-->
            <div class="col-sm-9">
                <h2>Chỉnh sửa hồ sơ</h2>


                <div class="tab-content">
                    <div class="tab-pane active" id="home">
                        <hr>
                        <div class="form-group">
                            <div class="col-xs-6">
                                <label for="first_name">
                                    <h4>Tên người dùng mới</h4>
                                </label>
                                <input type="text" class="form-control" name="userName" id="first_name"
                                    placeholder="Tên người dùng">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-xs-6">
                                <label for="last_name">
                                    <h4>Email mới</h4>
                                </label>
                                <input type="text" class="form-control" name="email" required id="last_name"
                                    placeholder="Email">
                            </div>
                        </div>

                        <div class="form-group">

                            <div class="col-xs-6">
                                <label for="phone">
                                    <h4>Mật khẩu mới</h4>
                                </label>
                                <input type="text" class="form-control" name="password" id="phone"
                                    placeholder="Mật khẩu">
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-xs-12">
                                <br>
                                <button class="btn btn-lg btn-success" type="submit"><i
                                        class="glyphicon glyphicon-ok-sign"></i> Save</button>
                                <button class="btn btn-lg" type="reset"><i class="glyphicon glyphicon-repeat"></i>
                                    Reset</button>
                            </div>
                        </div>

                        <hr>

                    </div>


                </div>
                <!--/tab-pane-->
            </div>
            <!--/tab-content-->

        </div>
        <!--/col-9-->
    </div>
</form>
<!--/row-->


<script>
    $(document).ready(function () {


        var readURL = function (input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    $('.avatar').attr('src', e.target.result);
                }

                reader.readAsDataURL(input.files[0]);
            }
        }


        $(".file-upload").on('change', function () {
            readURL(this);
        });
    });
</script>