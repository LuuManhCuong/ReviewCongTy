<hr>

<form method="POST" action="/profile/update/{{slug}}?_method=PUT" enctype="multipart/form-data">
    <div class="container bootstrap snippet">
        <h4 class="title">Hồ sơ cá nhân của bạn</h4>
        <div class="row">
            <div class="col-sm-5 profile">
                <div class="text-center profile-wr">
                    {{#if avatar}}
                    <label class="btnChangeAvt" for="changeAvatar">
                        <img src="/img-video/{{avatar}}" class="avatar img-circle img-thumbnail" alt="avatar">
                    </label>

                    {{else}}
                    <label class="btnChangeAvt" for="changeAvatar">
                        <img class="avarta"
                            src="https://scontent.fdad2-1.fna.fbcdn.net/v/t1.30497-1/143086968_2856368904622192_1959732218791162458_n.png?_nc_cat=1&ccb=1-7&_nc_sid=7206a8&_nc_ohc=VEahJ2Ps3kMAX8uqwfO&_nc_ht=scontent.fdad2-1.fna&oh=00_AT-rHxUn0aY1ejPx5MbSrV2mGBtZso_3tCyoHwhcwQByjg&oe=62EE1078"
                            alt="avarta">
                    </label>

                    {{/if}}

                    <label class="btnChangeAvt" for="changeAvatar">Đổi ảnh đại diện</label>
                    <input required id="changeAvatar" hidden type="file" name="avatar"
                        class="text-center center-block file-upload">
                    <h2>{{userName}}</h2>
                </div>
                </hr><br>


                <div class="panel panel-default">
                    <div class="panel-heading">Website <i class="fa fa-link fa-1x"></i></div>
                </div>


                <ul class="list-group">
                    <li class="list-group-item text-muted">Hoạt động<i class="fa fa-dashboard fa-1x"></i></li>
                    <li class="list-group-item text-right"><span class="pull-left"><strong>Likes</strong></span>
                        {{countLike}}</li>
                    <li class="list-group-item text-right"><span class="pull-left"><strong>Posts</strong></span>
                        {{countPost}}</li>
                </ul>

                {{!-- <div class="panel-pr panel panel-default"> --}}
                    <div class="panel-heading">Social Media</div>
                    <div  class="panel-body">
                        <i class="fa-brands fa-facebook"></i>
                        <i class="fa-brands fa-github"></i>
                        <i class="fa-brands fa-gitlab"></i>
                        <i class="fa-brands fa-instagram"></i>
                    </div>
                {{!-- </div> --}}

            </div>
            <!--/col-3-->
            <div class="col-sm-7">
                <h2 style="color: rgb(255, 196, 0); text-align: center;">Chỉnh sửa hồ sơ</h2>

                <div class="tab-content">
                    <div class="tab-pane active" id="home">
                        <div class="form-group">
                            <div class="col-xs-6">
                                <label for="first_name">
                                    <h4>Tên người dùng mới</h4>
                                </label>
                                <input required type="text" class="form-control" name="userName" id="first_name"
                                    placeholder="{{userName}}">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-xs-6">
                                <label for="last_name">
                                    <h4>Email mới</h4>
                                </label>
                                <input type="text" class="form-control" name="email" required id="last_name"
                                    placeholder="{{email}}">
                            </div>
                        </div>

                        <div class="form-group">

                            <div class="col-xs-6">
                                <label for="phone">
                                    <h4>Mật khẩu mới</h4>
                                </label>
                                <input required type="text" class="form-control" name="password" id="phone"
                                    placeholder="{{password}}">
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-xs-12">
                                <br>
                                <button class="btn btn-lg btn-success" type="submit"><i
                                        class="glyphicon glyphicon-ok-sign"></i> Save</button>
                               
                            </div>
                        </div>

                        <hr>

                    </div>


                </div>
                <!--/tab-pane-->
            </div>
            <!--/tab-content-->

        </div>
        <!--/col-9-->
    </div>
</form>
<!--/row-->


<script>
    $(document).ready(function () {


        var readURL = function (input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    $('.avatar').attr('src', e.target.result);
                }

                reader.readAsDataURL(input.files[0]);
            }
        }


        $(".file-upload").on('change', function () {
            readURL(this);
        });
    });
</script>