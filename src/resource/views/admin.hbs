<div class="rank">
    <div>
        <h3>Quản lý website</h3>
    </div>
    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th scope="col">Top</th>
                <th scope="col">Công ty</th>
                <th scope="col">Lĩnh vực</th>
                <th scope="col">Loại hình</th>
                <th style="text-align: center;" scope="col">Lượt đánh giá</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            {{#each company}}
            <tr>
                <th scope="row">{{sum @index 1}}</th>
                <td>{{this.name}}</td>
                <td>{{this.field}}</td>
                <td>{{this.typeCompany}}</td>
                {{!-- <td style="text-align: center;">{{this.like}}</td> --}}
                <td>
                    <form style="color: rgb(14, 120, 234);" action="/me/delete/{{this.slug}}?_method=delete" method="post"  class="loginBtn"><button type="submit">xoas</button></form>
                    <form style="color: rgb(14, 120, 234);" action="/me/updateCompany/{{this.slug}}" method="get"   class="loginBtn"><button type="submit">update</button></form>
                </td>

            </tr>
            {{/each}}
        </tbody>
    </table>
</div>