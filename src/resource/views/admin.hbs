<div class="rank">
    <h3 class="rank-tit">Bảng xếp hạng</h3>
    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th class="tittleTab" scope="col">Top</th>
                <th class="tittleTab" scope="col">Công ty</th>
                <th class="tittleTab" scope="col">Lĩnh vực</th>
                <th class="tittleTab" scope="col">Loại hình</th>
                <th class="tittleTab" style="text-align: center;" scope="col">Lượt truy cập</th>
                <th class="tittleTab" scope="col"></th>
                <th class="tittleTab" scope="col"></th>

            </tr>
        </thead>
        <tbody>
            {{#each company}}
            <tr>
                <th scope="row">{{sum @index 1}}</th>
                <td class="groupname-rank">
                    <img style="width: 30px; height: 30px; border-radius: 100%; margin-right:10px;" class="logo-rank"
                        src="/img-video/{{this.logo}}" alt="">
                    <div class="heading-rank">
                        <h3 style="font-size: 1.5rem ;">{{this.name}}</h3>
                    </div>
                </td>
                <td>{{this.field}}</td>
                <td>{{this.typeCompany}}</td>
                <td style="text-align: center;">{{this.view}}</td>
                <td>
                <td>
                    <div class="btn-admin">
                        <form action="/me/delete/{{this.slug}}?_method=delete" method="post" class="loginBtn"><button
                                type="submit">Xóa</button></form>
                        <form action="/me/updateCompany/{{this.slug}}" method="get" class="loginBtn">
                            <button type="submit">Sửa</button>
                        </form>
                    </div>
                </td>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>