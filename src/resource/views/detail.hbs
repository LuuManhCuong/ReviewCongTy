<div class="content">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="card-box task-detail">
                    <div class="group-info media mt-0 m-b-30">
                        <div class="infocmn">
                            <img class="d-flex mr-3 rounded-circle" alt="64x64" src="/img-video/{{company.logo}}"
                                style="width: 48px; height: 48px;">

                            <div class="media-body">
                                <h2 class="media-heading mb-0 mt-0">{{company.name}}</h2>
                                <h4 class="slg media-heading mb-0 mt-0">{{company.slogan}}</h4>
                            </div>
                        </div>

                        {{#if idUser}}
                        <div class="likeBtn">

                            {{#if isLike}}
                            <form class="likeActive" method="POST"
                                action="/unLike/company/{{company._id}}?idUser={{idUser}}&_method=PATCH">
                                <button class="like-btn" type="submit">
                                    <i class="fa-solid fa-thumbs-up"></i>
                                </button>
                                <h4 class="viewLike">Bạn và {{minus totalLike 1}} người khác...</h3>
                            </form>
                            {{else}}
                            <form class="dislikeActive" method="POST"
                                action="/like/company/{{company._id}}?idUser={{idUser}}&_method=PATCH">
                                <button class="like-btn" type="submit">
                                    <i class="fa-solid fa-thumbs-up"></i>
                                </button>
                                <h4 class="viewLike">{{totalLike}} lượt thích...</h3>
                            </form>
                            {{/if}}

                        </div>
                        {{/if}}
                    </div>
                    <div class="attached-files mt-4">
                        <h4 class="tittle-dt ">Ảnh nổi bật</h4>
                        <div id="carouselExampleControls" class="slider-img carousel slide" data-bs-ride="carousel">
                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    <img src="/img-video/{{img1}}" class="d-block w-100" alt="...">
                                </div>
                                <div class="carousel-item">
                                    <img src="/img-video/{{img2}}" class="d-block w-100" alt="...">
                                </div>
                                <div class="carousel-item">
                                    <img src="/img-video/{{img3}}" class="d-block w-100" alt="...">
                                </div>

                            </div>
                            <button class="carousel-control-prev" type="button"
                                data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Previous</span>
                            </button>
                            <button class="carousel-control-next" type="button"
                                data-bs-target="#carouselExampleControls" data-bs-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="visually-hidden">Next</span>
                            </button>
                        </div>
                    </div>
                    <h4 class="tittle-dt m-b-20">Tổng quan về công ty</h4>
                    <p class="text-muted">{{company.description}}</p>
                    <ul class="list-inline task-dates m-b-0 mt-5">
                        <li>
                            <h5 class="tittle-dt m-b-5">Ngày thành lập</h5>
                            <p>{{company.founding}}</p>
                        </li>
                        <li>
                            <h5 class="tittle-dt m-b-5">Lĩnh vực</h5>
                            <p>{{company.field}}</p>
                        </li>
                        <li>
                            <h5 class="tittle-dt m-b-5">Loại hình</h5>
                            <p>{{company.typeCompany}}</p>
                        </li>
                    </ul>
                    <div class="clearfix"></div>
                    {{!-- <div class="task-tags mt-4">
                        <h5 class="">Tags</h5>
                        <div class="bootstrap-tagsinput"><span class="tag label label-info">Amsterdam<span
                                    data-role="remove"></span></span> <span class="tag label label-info">Washington<span
                                    data-role="remove"></span></span> <span class="tag label label-info">Sydney<span
                                    data-role="remove"></span></span>

                        </div>

                    </div> --}}
                    <div class="assign-team mt-4">
                        <h5 class="tittle-dt m-b-5">Nhà sáng lập</h5>
                        <div>
                            <a href="#"><img class="rounded-circle thumb-sm" alt="64x64"
                                    src="https://bootdey.com/img/Content/avatar/avatar2.png"> </a>
                            <a href="#"><img class="rounded-circle thumb-sm" alt="64x64"
                                    src="https://bootdey.com/img/Content/avatar/avatar3.png"> </a>
                            <a href="#"><img class="rounded-circle thumb-sm" alt="64x64"
                                    src="https://bootdey.com/img/Content/avatar/avatar5.png"> </a>
                            {{!-- <a href="#"><img class="rounded-circle thumb-sm" alt="64x64"
                                    src="https://bootdey.com/img/Content/avatar/avatar8.png"> </a><a href="#"><span
                                    class="add-new-plus"><i class="fa fa-plus"></i></span></a> --}}
                        </div>
                    </div>

                </div>
            </div>
            <!-- end col -->
            <div class="col-lg-4">
                <div class="card-box">
                    <div>
                        <form method="POST" action="/create/comment" class="media m-b-20">
                            <h4 class="header-title m-b-30">Viết bình luận: </h4>
                            {{#if idUser}}
                            <div class="d-flex mr-3">
                                <div class="comment-wr d-flex mr-3">
                                    {{#if avatar}}
                                    <a href="#"><img class="media-object rounded-circle thumb-sm" alt="64x64"
                                            src="/img-video/{{avatar}}">
                                    </a>
                                    {{else}}
                                    <a href="#"><img class="media-object rounded-circle thumb-sm" alt="64x64"
                                            src="https://bootdey.com/img/Content/avatar/avatar5.png">
                                    </a>
                                    {{/if}}
                                    <h5 class="nameUser mt-0">{{this.userName}}</h5>
                                </div>
                            </div>
                            <div class="cowr media-body">
                                <textarea type="text" name="message" class="form-control input-sm"
                                    placeholder="Some text value..."> </textarea>
                                <input type="text" value="{{idUser}}" name="idUser" hidden class="form-control input-sm"
                                    placeholder="Some text value...">
                                <input type="text" value="{{company._id}}" name="idCompany" hidden
                                    class="form-control input-sm" placeholder="Some text value...">

                                <div class="mt-2 text-right">
                                    <button type="submit"
                                        class="btn btnComment  btn-sm btn-custom waves-effect waves-light">Send</button>
                                </div>
                            </div>
                            {{else}}
                            <a style="font-size: 1.5rem; color: blue; padding: 10px 0; display: block;"
                                href="/login">Đăng nhập để bình luận</a>
                            {{/if}}
                            </from>
                            <h4 class="header-title m-b-30">Comment ( {{countComment}} ) </h4>

                            {{#each fillterComment}}
                            <div class="comment-wraper media m-b-20">
                                <div class="comment-wr d-flex mr-3">
                                    {{#if avatar}}
                                    <a href="#"><img class="media-object rounded-circle thumb-sm" alt="64x64"
                                            src="/img-video/{{avatar}}">
                                    </a>
                                    {{else}}
                                    <a href="#"><img class="media-object rounded-circle thumb-sm" alt="64x64"
                                            src="https://bootdey.com/img/Content/avatar/avatar5.png">
                                    </a>
                                    {{/if}}
                                    <h5 class="nameUser mt-0">{{this.userName}}</h5>
                                    <p class="timeComment">{{this.createdAt}}</p>
                                </div>
                                <div class="media-body">
                                    <p class="font-13 text-muted mb-0">
                                        {{this.message}}
                                        {{!-- </p><a href="" class="text-success font-13">Reply</a> --}}
                                </div>
                            </div>
                            {{/each}}
                    </div>
                </div>
            </div>
            <!-- end col -->
        </div>
        <!-- end row -->
    </div>
    <!-- container -->
</div>